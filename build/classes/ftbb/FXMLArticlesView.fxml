<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="464.0" prefWidth="668.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ftbb.ArticlesViewController">
   <children>
      <VBox maxWidth="1.7976931348623157E308" prefHeight="462.0" prefWidth="668.0">
         <children>
            <ScrollPane fx:id="articles_scroller" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="467.0" prefWidth="667.0">
               <content>
                  <VBox fx:id="vbox_articles" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="466.0" prefWidth="653.0" />
               </content>
            </ScrollPane>
            <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="69.0" prefWidth="668.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#addArticle" text="Add a new article" />
                  <Button lineSpacing="5.0" mnemonicParsing="false" onAction="#refreshArticle" prefHeight="30.0" prefWidth="116.0" text="Refresh" />
                  <TextField fx:id="filter" promptText="Search..." />
                  <ComboBox fx:id="sort" onAction="#onSelected" prefHeight="30.0" prefWidth="228.0" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
